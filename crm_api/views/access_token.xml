<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
      <record id="generate_access_token" model="ir.cron">
            <field name="name">Tata Telecommunication Access Token</field>
            <field name="model_id" ref="crm_api.model_hr_employee"/>
            <field name="state">code</field>
            <field name="code">model.generate_tata_telecommunication_access_token()</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>
</odoo>